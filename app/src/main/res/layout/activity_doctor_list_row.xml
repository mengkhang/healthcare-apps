<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".doctor_list">

    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_account_24dp" />

    <TextView
        android:id="@+id/txtName"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        android:text="Name" />

    <TextView
        android:id="@+id/txtSpec"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        android:maxLength="50"
        android:singleLine="true"
        android:text="Specialties"
        android:textColor="#FF5722" />

    <TextView
        android:id="@+id/txtAccomplishment"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSpec"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        android:maxLength="50"
        android:singleLine="true"
        android:text="doctors' accomplishments in medical fields" />
<!--    android:textColor="@android:color/darker_gray"-->


</RelativeLayout>